<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Левая часть: информация -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskTitle"
                android:text="Task Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111827"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskDescription"
                android:text="Task Description"
                android:textSize="14sp"
                android:textColor="#4B5563"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskDeadline"
                android:text="Merzımı: 2025-05-10 23:59"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskPriority"
                android:text="Basymdylyq: High"
                android:textSize="13sp"
                android:textColor="#B91C1C"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/taskCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sanat: Study"
                android:textColor="#2563EB"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/taskStatus"
                android:text="Küiı: In progress"
                android:textSize="13sp"
                android:textColor="#059669"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Правая часть: кнопки -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Изменить"
                android:src="@drawable/edit"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/trash"
                android:contentDescription="Удалить"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/btnComplete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/check"
                android:contentDescription="Удалить"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
